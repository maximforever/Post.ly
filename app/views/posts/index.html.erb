
<%= link_to "New Post", 'post/new' %>

<% @posts.each do |p| %>
	<div class = "post">
		<div class = "heading">
			<%= p.id %>. <%= p.author %>
		</div>
		
		<div class = "content">
			<%= p.content %>
		</div>
		

		<div class = "date">
			Posted at: <%= p.created_at %>
		</div>

	</div>	
<% end %>





